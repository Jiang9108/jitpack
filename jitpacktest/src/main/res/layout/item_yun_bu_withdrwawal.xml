<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_withdrawal_title_background"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/yunbu_green"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/iv_withdrawal_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_yunbu_back_write" />

                <TextView
                    android:id="@+id/tv_withdrawal_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="提现"
                    android:textColor="@color/yunbu_write"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_withdrawal_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:text="提现记录"
                    android:textColor="@color/yunbu_write"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_withdrawal_my_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="我的余额"
                android:textColor="@color/yunbu_write"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="￥ "
                    android:textColor="@color/yunbu_write"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_withdrawal_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0.00"
                    android:textColor="@color/yunbu_write"
                    android:textSize="28sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_withdrawal_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="187dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/bg_yunbu_withdrawal_box_small"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="提现金额"
                    android:textColor="@color/yunbu_textblack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="￥"
                        android:textColor="@color/yunbu_textblack"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/et_withdrawal_set_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textColor="@color/yunbu_textblack"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_withdrawal_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="全部提现"
                        android:textColor="@color/yunbu_orange"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line2"
                    android:background="@color/yunbu_linegray2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_withdrawal_choose_pay_way"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="提现至"
                    android:textColor="@color/yunbu_textblack"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_withdrawal_choose_pay_way_image"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_yunbu_withdrawal_alipay" />

                <TextView
                    android:id="@+id/tv_withdrawal_choose_pay_way_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/yunbu_textblack"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_withdrawal_choose_pay_way_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/ic_yunbu_go_gray" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_withdrawal_choose_pay_way_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/ic_yunbu_withdrawal_alipay" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="支付宝"
                        android:textColor="@color/yunbu_textblack"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_withdrawal_choose_alipay"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="5dp"
                        android:src="@mipmap/ic_yunbu_withdrawal_tag" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/ic_yunbu_withdrawal_wechat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="微信"
                        android:textColor="@color/yunbu_textblack"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_withdrawal_choose_wechat"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="5dp"
                        android:src="@mipmap/ic_yunbu_withdrawal_untag" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_withdrawal_certain"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_shape_c20"
                android:gravity="center"
                android:text="立即提现"
                android:textColor="@color/yunbu_write"
                android:textSize="17sp" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>