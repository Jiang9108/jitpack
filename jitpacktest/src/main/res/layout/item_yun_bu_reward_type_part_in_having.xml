<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">


        <ImageView
            android:id="@+id/iv_item_reward_part_in_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/yunbu_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_item_reward_part_in_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收取现金"
                android:textColor="@color/yunbu_textblack"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_item_reward_part_in_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="小游戏"
                android:textColor="@color/yunbu_textgray2"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_reward_part_in_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.01元"
                android:textColor="@color/yunbu_textchecked"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_reward_part_in_audit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="审核中"
                android:textColor="@color/yunbu_green"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_reward_part_in_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请在"
            android:textColor="@color/yunbu_textgray2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_reward_part_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0:0"
            android:textColor="@color/yunbu_textchecked"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="内完成提交，逾期自动取消"
            android:textColor="@color/yunbu_textgray2"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_reward_part_in_finish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text="完成时间：2021-07-13 17:23 "
        android:textColor="@color/yunbu_textgray2"
        android:textSize="12sp"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/ll_item_reward_part_in_give_up_and_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:gravity="right"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_item_reward_part_in_give_up"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/red_shape_c5_d1"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/yunbu_textchecked"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_item_reward_part_in_submit"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:background="@drawable/red_shape_c5"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/yunbu_write"
            android:textSize="12sp" />


    </LinearLayout>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@color/yunbu_linegray" />


</LinearLayout>