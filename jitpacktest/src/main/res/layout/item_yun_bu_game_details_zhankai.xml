<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_game_details_fuli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/light_green_shape_c10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/tv_item_game_details_fuli_num"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/ic_yunbu_game_details_num"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/yunbu_write"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_item_game_details_fuli_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0.5元"
            android:textColor="@color/yunbu_textblack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_game_details_fuli_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="展开"
            android:textColor="@color/yunbu_green"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/tv_item_game_details_fuli_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_yunbu_down_green" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_game_details_fuli_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv_item_game_details_fuli_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/pink_shape_c10"
            android:divider="@color/yunbu_transparent"
            android:fadingEdge="none"
            android:focusable="true"
            android:scrollbars="none" />

    </LinearLayout>


</LinearLayout>