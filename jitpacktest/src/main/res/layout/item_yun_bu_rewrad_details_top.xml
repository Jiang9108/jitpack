<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_write"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yunbu_write"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_reward_details_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@color/yunbu_textblack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_reward_details_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="游戏名称"
                            android:textColor="@color/yunbu_textblack"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/tv_reward_details_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_shape_c5"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="4dp"
                            android:text="0.00元"
                            android:textColor="@color/yunbu_write"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


           <!--         <TextView
                        android:id="@+id/tv_reward_details_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:text="拼多多砍价"
                        android:textColor="@color/yunbu_textgray2"
                        android:textSize="12sp" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reward_details_lable_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:background="@mipmap/ic_yunbu_reward_details_lable_frome"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="1dp"
                            android:text="已验证"
                            android:textColor="@color/yunbu_orange"
                            android:textSize="10sp" />

                    <!--    <TextView
                            android:id="@+id/tv_reward_details_lable_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_yunbu_reward_details_lable_frome"
                            android:paddingLeft="8dp"
                            android:paddingTop="1dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="1dp"
                            android:text="已验证"
                            android:textColor="@color/yunbu_orange"
                            android:textSize="10sp" />-->


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reward_details_shengyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textColor="@color/yunbu_orange"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="剩余数量"
                    android:textColor="@color/yunbu_textgray2"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="@dimen/line"
                android:layout_height="15dp"
                android:background="@color/yunbu_textgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reward_details_task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/yunbu_orange"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小时"
                        android:textColor="@color/yunbu_orange"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="做单时间"
                    android:textColor="@color/yunbu_textgray2"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="@dimen/line"
                android:layout_height="15dp"
                android:background="@color/yunbu_textgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reward_details_audit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textColor="@color/yunbu_orange"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小时"
                        android:textColor="@color/yunbu_orange"
                        android:textSize="10sp" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="审核时间"
                    android:textColor="@color/yunbu_textgray2"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/yunbu_linegray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/ic_yunbu_game_details_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:text="任务说明"
            android:textColor="@color/yunbu_textblack"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yunbu_write"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_reward_details_task_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_green_shape2_c10"
            android:padding="12dp"
            android:text="任务说明"
            android:textColor="@color/yunbu_textblack"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:text="任务进度"
            android:textColor="@color/yunbu_textblack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reward_details_step_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_yunbu_reward_details_step_unfinish"
                android:gravity="center"
                android:text="开始任务"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reward_details_step_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_yunbu_reward_details_step_finish"
                android:gravity="center"
                android:text="任务进行中"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reward_details_step_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_yunbu_reward_details_step_unfinish"
                android:gravity="center"
                android:text="审核中"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reward_details_step_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_yunbu_reward_details_step_unfinish"
                android:gravity="center"
                android:text="奖励发放"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/yunbu_linegray" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="任务进度"
        android:textColor="@color/yunbu_textblack"
        android:textSize="16sp" />

</LinearLayout>