<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_game_details_fuli_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">



            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_item_game_details_fuli_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/yunbu_textgray2"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tv_item_game_details_fuli_item_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_yunbu_game_details_top3" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_item_game_details_fuli_item_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="id:"
                android:textColor="@color/yunbu_textgray2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/yunbu_textchecked"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_game_details_fuli_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="0.00"
                android:textColor="@color/yunbu_textchecked"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_game_details_fuli_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="å…ƒ"
                android:textColor="@color/yunbu_textchecked"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:background="@color/yunbu_linegray2" />

    </LinearLayout>


</LinearLayout>