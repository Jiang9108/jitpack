<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_write"
    android:orientation="vertical"
    tools:context=".activity.YunBuRewardBillActivity">

    <RelativeLayout
        android:id="@+id/rl_reward_bill_title_background"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/yunbu_green">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/iv_reward_bill_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:src="@mipmap/ic_yunbu_back_write" />

            <TextView
                android:id="@+id/tv_reward_bill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="奖励记录"
                android:textColor="@color/yunbu_write"
                android:textSize="17sp" />

        </RelativeLayout>

    </RelativeLayout>

    <com.lt.flowwall.xPullRefresh.XListView
        android:id="@+id/xlv_reward_bill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/yunbu_transparent"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="visible"/>

</LinearLayout>