<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_write"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reward_details_type_link_num"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/ic_yunbu_game_details_num"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="1"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_reward_details_type_link_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="说明说明说明明说明说明说明说明说明说明说明说明说说明说明说明"
                android:textColor="@color/yunbu_textblack"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reward_details_type_link_show_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/yunbu_textblack"
                android:text="www.baidu.com"/>


            <TextView
                android:id="@+id/tv_reward_details_type_link_copy"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:background="@drawable/orange_shape_c2"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:text="复制链接"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>