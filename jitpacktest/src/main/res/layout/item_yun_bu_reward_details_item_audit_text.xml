<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_write"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reward_details_type_aduit_num"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/ic_yunbu_game_details_num"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_reward_details_type_aduit_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="说明说明说明明说明说明说明说明说明说明说明说明说说明说明说明"
                android:textColor="@color/yunbu_textblack"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_reward_details_type_aduit_shuru_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_shape_c2_d1"
                android:hint="请按要求输入文字验证内容！"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/yunbu_textblack"
                android:visibility="visible"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_reward_details_type_aduit_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_shape_c2_d1"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:text="说明说明说明明说明说明说明说明说明说明说明说明说说明说明说明"
                android:textColor="@color/yunbu_textblack"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>