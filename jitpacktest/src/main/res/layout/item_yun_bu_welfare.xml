<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_welfare_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="精灵冒险4期"
                android:textColor="@color/yunbu_textblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_welfare_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="审核中"
                android:textColor="@color/yunbu_green"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_welfare_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="简单易学易上手，在家就能赚取的小游戏。"
                android:textColor="@color/yunbu_textgray2"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_item_welfare_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.01元"
                android:textColor="@color/yunbu_textchecked"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_welfare_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束时间：2021-08-21 18：00：00"
                android:textColor="@color/yunbu_textgray2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_welfare_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_shape_c20"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="重新领取"
                android:textColor="@color/yunbu_write"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line2"
            android:layout_marginTop="12dp"
            android:background="@color/yunbu_linegray" />


    </LinearLayout>


</LinearLayout>