<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yunbu_write"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/yunbu_write"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_part_in_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID:1231"
            android:textColor="@color/yunbu_textgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_part_in_title_reward_notes"
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:background="@mipmap/button_yunbu_reward_money"
            android:gravity="center"
            android:text="奖励记录"
            android:textColor="@color/yunbu_write"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_part_in_title_welfare"
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/button_yunbu_reward_money"
            android:gravity="center"
            android:text="榜单福利"
            android:textColor="@color/yunbu_write"
            android:textSize="14sp" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/yunbu_linegray" />

    <LinearLayout
        android:id="@+id/ll_part_in_title_show_game_reward"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_part_in_title_reward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yunbu_write"
            android:gravity="center"
            android:text="快赚"
            android:textColor="@color/yunbu_textblack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_part_in_title_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yunbu_lightgreen"
            android:gravity="center"
            android:text="试玩"
            android:textColor="@color/yunbu_write"
            android:textSize="17sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_part_in_title_reward"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_part_in_title_reward_having"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="@color/yunbu_textgray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_part_in_title_reward_having_zhishiqi"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@color/yunbu_green"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_part_in_title_reward_wait_audit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="待审核"
                    android:textColor="@color/yunbu_textgray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_part_in_title_reward_wait_audit_zhishiqi"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@color/yunbu_green"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_part_in_title_reward_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/yunbu_textgray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_part_in_title_reward_finish_zhishiqi"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@color/yunbu_green"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_part_in_title_reward_unpass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="未通过"
                    android:textColor="@color/yunbu_textgray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_part_in_title_reward_unpass_zhishiqi"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@color/yunbu_green"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginTop="6dp"
            android:background="@color/yunbu_linegray" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lt.flowwall.xPullRefresh.XListView
            android:id="@+id/xlv_part_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_part_in_recommend"
            android:layout_weight="1"
            android:divider="@color/yunbu_transparent"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_part_in_no_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_yunbu_part_in_no_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="暂无任务展示哦～"
                android:textColor="@color/yunbu_textgray2"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_part_in_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/yunbu_linegray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/yunbu_write"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/yunbu_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="热门任务"
                        android:textColor="@color/yunbu_textblack"
                        android:textSize="17sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_part_in_title_recommend_one_image"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />

                        <TextView
                            android:id="@+id/tv_part_in_title_recommend_one_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="热门任务"
                            android:textColor="@color/yunbu_textgray2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_part_in_title_recommend_two_image"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />

                        <TextView
                            android:id="@+id/tv_part_in_title_recommend_two_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="热门任务"
                            android:textColor="@color/yunbu_textgray2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_part_in_title_recommend_three_image"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />

                        <TextView
                            android:id="@+id/tv_part_in_title_recommend_three_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="热门任务"
                            android:textColor="@color/yunbu_textgray2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_part_in_title_recommend_four_image"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />

                        <TextView
                            android:id="@+id/tv_part_in_title_recommend_four_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="热门任务"
                            android:textColor="@color/yunbu_textgray2"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
